#/bin/zsh

# Get max monitors resolution
maxres=$(xrandr | grep '*' | sort -n | tail -1 | awk '{ print $1 }')

FOLDER="~/Images"
if [ "$1" != "" ]; then
  FOLDER=$1
fi

# Download and resize a wallpapers
function wresize() {
    if [ -e ${FOLDER}/${2} ]; then
			echo "$1 Allready Downloaded"
    else
			echo "Downloaded $1"
      convert "${1}" -strip -resize "$maxres^" ${FOLDER}/${2}
    fi
}

